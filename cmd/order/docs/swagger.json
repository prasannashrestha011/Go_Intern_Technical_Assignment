{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "This API manages orders.",
        "title": "Orders API",
        "contact": {},
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8082",
    "paths": {
        "/orders": {
            "get": {
                "description": "Returns a list of all orders in the system",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "List all orders",
                "responses": {
                    "200": {
                        "description": "Order lists from the database",
                        "schema": {
                            "$ref": "#/definitions/schema.SuccessResponseSchema"
                        }
                    },
                    "404": {
                        "description": "Order list is empty in the database",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    }
                }
            },
            "post": {
                "description": "Creates a new order for a user with the provided order data",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Create a new order",
                "parameters": [
                    {
                        "description": "Order payload",
                        "name": "order",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/schema.CreateOrder"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Order created successfully",
                        "schema": {
                            "$ref": "#/definitions/schema.SuccessResponseSchema"
                        }
                    },
                    "400": {
                        "description": "Invalid order details",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    },
                    "500": {
                        "description": "Unknow error occured in the server",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    }
                }
            }
        },
        "/orders/{id}": {
            "get": {
                "description": "Returns details of a specific order by its ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Get order by ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Order ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Order details associated with orderID: ",
                        "schema": {
                            "$ref": "#/definitions/schema.SuccessResponseSchema"
                        }
                    },
                    "400": {
                        "description": "Order Id is missing",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    },
                    "404": {
                        "description": "Order details not found",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    }
                }
            },
            "put": {
                "description": "Updates the details of a specific order by its ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Update an existing order",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Order ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Updated order payload",
                        "name": "order",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/schema.OrderUpdate"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Order updated successfully",
                        "schema": {
                            "$ref": "#/definitions/schema.SuccessResponseSchema"
                        }
                    },
                    "400": {
                        "description": "Invalid Order ID or order payload",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    },
                    "404": {
                        "description": "Order not found",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    }
                }
            }
        },
        "/users/{id}/orders": {
            "get": {
                "description": "Returns a list of orders associated with a specific user ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "orders"
                ],
                "summary": "Get all orders for a user",
                "parameters": [
                    {
                        "type": "string",
                        "description": "User ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Order details associated with userID: ",
                        "schema": {
                            "$ref": "#/definitions/schema.SuccessResponseSchema"
                        }
                    },
                    "400": {
                        "description": "UserId is invalid or missing!!",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    },
                    "404": {
                        "description": "Order details didnot found with userID: ",
                        "schema": {
                            "$ref": "#/definitions/schema.ErrorResponseSchema"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "schema.CreateOrder": {
            "type": "object",
            "required": [
                "orderName",
                "price",
                "quantity",
                "userID"
            ],
            "properties": {
                "orderName": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "quantity": {
                    "type": "integer"
                },
                "userID": {
                    "type": "string"
                }
            }
        },
        "schema.ErrorDetail": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string"
                },
                "details": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "schema.ErrorResponseSchema": {
            "type": "object",
            "properties": {
                "error": {
                    "$ref": "#/definitions/schema.ErrorDetail"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "schema.OrderUpdate": {
            "type": "object",
            "required": [
                "price"
            ],
            "properties": {
                "order_name": {
                    "type": "string"
                },
                "price": {
                    "type": "number"
                },
                "quantity": {
                    "type": "integer"
                },
                "status": {
                    "type": "string"
                }
            }
        },
        "schema.SuccessResponseSchema": {
            "type": "object",
            "properties": {
                "data": {},
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        }
    },
    "securityDefinitions": {
        "ApiKeyAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}